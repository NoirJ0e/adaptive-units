{
    "name": "adaptive-units",
    "version": "0.1.2",
    "description": "Adaptive viewport units for Tailwind CSS v4 + Vite + PostCSS",
    "license": "MIT",
    "keywords": [
        "tailwindcss",
        "vite",
        "postcss",
        "adaptive",
        "viewport",
        "vw",
        "vh",
        "responsive"
    ],
    "repository": {
        "type": "git",
        "url": ""
    },
    "type": "module",
    "bin": {
        "adaptive-units": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./vite": {
            "types": "./dist/vite.d.ts",
            "import": "./dist/vite.mjs",
            "require": "./dist/vite.cjs"
        },
        "./tailwind": {
            "types": "./dist/tailwind.d.ts",
            "import": "./dist/tailwind.mjs",
            "require": "./dist/tailwind.cjs"
        },
        "./postcss": {
            "types": "./dist/postcss.d.ts",
            "import": "./dist/postcss.mjs",
            "require": "./dist/postcss.cjs"
        },
        "./react": {
            "types": "./dist/react.d.ts",
            "import": "./dist/react.mjs",
            "require": "./dist/react.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "postcss": ">=8.0.0",
        "react": ">=18.0.0",
        "tailwindcss": ">=4.0.0",
        "vite": ">=5.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "vite": {
            "optional": true
        },
        "tailwindcss": {
            "optional": true
        },
        "postcss": {
            "optional": true
        }
    },
    "devDependencies": {
        "@types/node": "^25.2.3",
        "@types/react": "^19.0.0",
        "postcss": "^8.0.0",
        "react": "^19.0.0",
        "tailwindcss": "^4.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.7.0",
        "vite": "^6.0.0"
    }
}
